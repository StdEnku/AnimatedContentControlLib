<UserControl x:Class="Demo.Views.Control4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"       
             xmlns:config="clr-namespace:Demo.Properties"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Viewbox Grid.ColumnSpan="2">
            <StackPanel>
                <Label Content="ModernSlideinUp→" />
                <Label Content="←ModernSlideinRight" />
            </StackPanel>
        </Viewbox>

        <Button Content="Back" 
                Command="{Binding NavigateCmd}" 
                CommandParameter="{Binding Source={x:Static config:Settings.Default}, Path=Control3ViewRegionName}" 
                Grid.Column="0" Grid.Row="1" Margin="5" />

        <Button Content="Next"
                Command="{Binding NavigateCmd}" 
                CommandParameter="{Binding Source={x:Static config:Settings.Default}, Path=Control5ViewRegionName}" 
                Grid.Column="1" Grid.Row="1" Margin="5" />
    </Grid>
</UserControl>
